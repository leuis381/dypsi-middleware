{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DYPSI Menu Schema",
  "description": "Schema for DYPSI Pizzer√≠a & Grill menu catalog with validation rules",
  "type": "object",
  "required": ["meta", "categorias"],
  "additionalProperties": true,
  "properties": {
    "meta": {
      "type": "object",
      "required": ["version", "store", "currency"],
      "additionalProperties": true,
      "properties": {
        "version": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
        },
        "store": {
          "type": "string",
          "minLength": 1
        },
        "currency": {
          "type": "string",
          "pattern": "^[A-Z]{3}$"
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "categorias": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "nombre", "productos"],
        "additionalProperties": true,
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "nombre": {
            "type": "string",
            "minLength": 1
          },
          "descripcion": {
            "type": "string"
          },
          "productos": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "id",
                "sku",
                "nombre",
                "descripcion",
                "variantes",
                "modificadores",
                "tags",
                "stock",
                "disponible",
                "prep_time_min",
                "calorias_kcal",
                "imagenes",
                "created_at"
              ],
              "additionalProperties": true,
              "properties": {
                "id": {
                  "type": "string",
                  "minLength": 1
                },
                "sku": {
                  "type": "string",
                  "minLength": 1
                },
                "nombre": {
                  "type": "string",
                  "minLength": 1
                },
                "precio": {
                  "oneOf": [
                    {
                      "type": "null"
                    },
                    {
                      "type": "number",
                      "minimum": 0
                    }
                  ]
                },
                "descripcion": {
                  "type": "string"
                },
                "variantes": {
                  "oneOf": [
                    {
                      "type": "null"
                    },
                    {
                      "type": "object",
                      "patternProperties": {
                        "^.*$": {
                          "type": "number",
                          "minimum": 0
                        }
                      },
                      "additionalProperties": false
                    }
                  ]
                },
                "modificadores": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["id", "nombre", "precio"],
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "nombre": {
                        "type": "string"
                      },
                      "precio": {
                        "type": "number"
                      }
                    }
                  }
                },
                "tags": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "stock": {
                  "type": "integer",
                  "minimum": 0
                },
                "disponible": {
                  "type": "boolean"
                },
                "prep_time_min": {
                  "oneOf": [
                    {
                      "type": "null"
                    },
                    {
                      "type": "integer",
                      "minimum": 0
                    }
                  ]
                },
                "calorias_kcal": {
                  "oneOf": [
                    {
                      "type": "number",
                      "minimum": 0
                    },
                    {
                      "type": "object",
                      "patternProperties": {
                        "^.*$": {
                          "type": "number",
                          "minimum": 0
                        }
                      },
                      "additionalProperties": false
                    }
                  ]
                },
                "alergenos": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "imagenes": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "created_at": {
                  "type": "string",
                  "format": "date-time"
                }
              }
            }
          }
        }
      }
    }
  }
}
