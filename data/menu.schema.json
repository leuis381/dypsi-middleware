{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/menu.schema.json",
  "title": "Menu Schema",
  "description": "JSON Schema for DYPSI menu catalog validation",
  "type": "object",
  "required": ["meta", "categorias"],
  "additionalProperties": true,
  "properties": {
    "meta": {
      "type": "object",
      "required": ["version", "store", "currency"],
      "properties": {
        "version": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
        },
        "store": {
          "type": "string"
        },
        "currency": {
          "type": "string",
          "enum": ["PEN", "USD", "EUR"]
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "categorias": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "nombre", "productos"],
        "properties": {
          "id": {
            "type": "string"
          },
          "nombre": {
            "type": "string"
          },
          "descripcion": {
            "type": "string"
          },
          "productos": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/product"
            }
          }
        }
      }
    },
    "reglas": {
      "type": "array",
      "items": {
        "type": "object"
      }
    }
  },
  "definitions": {
    "product": {
      "type": "object",
      "required": ["id", "sku", "nombre", "precio", "modificadores", "tags", "stock", "disponible", "imagenes", "created_at"],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "sku": {
          "type": "string",
          "minLength": 1
        },
        "nombre": {
          "type": "string",
          "minLength": 1
        },
        "precio": {
          "type": "number",
          "minimum": 0
        },
        "descripcion": {
          "type": "string"
        },
        "variantes": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "object",
              "patternProperties": {
                ".*": {
                  "type": "number",
                  "minimum": 0
                }
              }
            }
          ]
        },
        "modificadores": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "nombre", "precio"],
            "properties": {
              "id": {
                "type": "string"
              },
              "nombre": {
                "type": "string"
              },
              "precio": {
                "type": "number"
              }
            }
          }
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "stock": {
          "type": "integer",
          "minimum": 0
        },
        "disponible": {
          "type": "boolean"
        },
        "prep_time_min": {
          "oneOf": [
            {
              "type": "integer",
              "minimum": 0
            },
            {
              "type": "null"
            }
          ]
        },
        "calorias_kcal": {
          "oneOf": [
            {
              "type": "number",
              "minimum": 0
            },
            {
              "type": "object",
              "patternProperties": {
                ".*": {
                  "type": "number",
                  "minimum": 0
                }
              }
            }
          ]
        },
        "alergenos": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "imagenes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}
