{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://dypsi.com/schemas/menu.json",
  "title": "DYPSI Menu Catalog Schema",
  "description": "Schema for the restaurant menu catalog with products, variants, modifiers, and business rules",
  "type": "object",
  "required": ["meta", "categorias", "reglas"],
  "additionalProperties": false,
  "properties": {
    "meta": {
      "type": "object",
      "required": ["version", "store", "currency"],
      "properties": {
        "version": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
        },
        "store": {
          "type": "string"
        },
        "currency": {
          "type": "string",
          "pattern": "^[A-Z]{3}$"
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "categorias": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "nombre", "productos"],
        "additionalProperties": true,
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9_]+$"
          },
          "nombre": {
            "type": "string"
          },
          "descripcion": {
            "type": "string"
          },
          "productos": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/producto"
            }
          }
        }
      }
    },
    "reglas": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "descripcion"],
        "properties": {
          "id": {
            "type": "string"
          },
          "descripcion": {
            "type": "string"
          },
          "productos_afectados": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "tipo": {
            "type": "string"
          },
          "condiciones": {
            "type": "object"
          }
        }
      }
    }
  },
  "definitions": {
    "producto": {
      "type": "object",
      "required": [
        "id",
        "sku",
        "nombre",
        "precio",
        "descripcion",
        "variantes",
        "modificadores",
        "tags",
        "stock",
        "disponible",
        "prep_time_min",
        "calorias_kcal",
        "alergenos",
        "imagenes",
        "created_at"
      ],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9_]+$"
        },
        "sku": {
          "type": "string",
          "pattern": "^[A-Z0-9-]+$"
        },
        "nombre": {
          "type": "string",
          "minLength": 1
        },
        "precio": {
          "type": "number",
          "minimum": 0
        },
        "descripcion": {
          "type": "string"
        },
        "variantes": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "object",
              "additionalProperties": false,
              "patternProperties": {
                "^(pequena|mediana|grande|familiar|individual|6_unidades|12_unidades|clasica_8_tajadas|grande_12_tajadas|chocolate|vainilla|mitad_mitad)$": {
                  "type": "number",
                  "minimum": 0
                }
              }
            }
          ]
        },
        "modificadores": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "nombre", "precio"],
            "additionalProperties": false,
            "properties": {
              "id": {
                "type": "string",
                "pattern": "^[a-z0-9_]+$"
              },
              "nombre": {
                "type": "string"
              },
              "precio": {
                "type": "number",
                "minimum": 0
              }
            }
          }
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "stock": {
          "type": "integer",
          "minimum": 0
        },
        "disponible": {
          "type": "boolean"
        },
        "prep_time_min": {
          "oneOf": [
            {
              "type": "integer",
              "minimum": 0
            },
            {
              "type": "null"
            }
          ]
        },
        "calorias_kcal": {
          "oneOf": [
            {
              "type": "number",
              "minimum": 0
            },
            {
              "type": "object",
              "patternProperties": {
                "^(pequena|mediana|grande|familiar|individual|6_unidades|12_unidades|clasica_8_tajadas|grande_12_tajadas|chocolate|vainilla|mitad_mitad)$": {
                  "type": "number",
                  "minimum": 0
                }
              }
            }
          ]
        },
        "alergenos": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "imagenes": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}
