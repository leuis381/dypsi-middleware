{
  "name": "dypsi-middleware",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "description": "DYPSI Restaurant Order Processing Middleware - AI-Powered Bot with Extreme Common Sense",
  "keywords": [
    "whatsapp",
    "chatbot",
    "restaurant",
    "delivery",
    "order-processing",
    "ai",
    "ocr",
    "firebase"
  ],
  "author": "DYPSI Team",
  "license": "MIT",
  "main": "api/kommo.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "NODE_ENV=production node ./api/kommo.js",
    "dev": "NODE_ENV=development nodemon --watch . --ext js,json --exec \"node ./api/kommo.js\"",
    "test": "echo \"Run tests with: npm run test:unit\"",
    "test:unit": "node --test lib/**/*.test.js",
    "validate-menu": "node ./scripts/check_menu.js",
    "lint": "eslint . --ext .js --report-unused-disable-directives",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "security-audit": "npm audit --production --audit-level=moderate",
    "health-check": "curl -s http://localhost:3000/api/health | jq .",
    "postinstall": "echo 'DYPSI Middleware installed successfully!'"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "firebase-admin": "^12.3.0",
    "form-data": "^4.0.0",
    "joi": "^17.11.0",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "protobufjs": "^7.2.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "eslint": "^8.57.0",
    "prettier": "^3.1.1",
    "mocha": "^10.2.0"
  },
  "optionalDependencies": {
    "fsevents": "^2.3.3"
  }
}
